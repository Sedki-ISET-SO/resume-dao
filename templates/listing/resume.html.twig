{% block head %}
	<meta charset="UTF-8"/>
	<meta http-equiv="X-UA-Compatible" content="IE=edge"/>
	<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
	<link rel="preconnect" href="https://fonts.gstatic.com"/>
	<link href="https://fonts.googleapis.com/css2?family=Mulish:wght@400;700&display=swap" rel="stylesheet"/>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous"/>

	<style>
		/* Styles go here */
		@media print {
			* {
				-webkit-print-color-adjust: exact !important;
			}
		}
		* {
			font-family: "Mulish", sans-serif;
		}
		.section-padding {
			padding-bottom: 20px;
		}
		.table >:not(:last-child) >:last-child > * {
			border-bottom-color: inherit;
		}
		strong {
			font-weight: 700 !important;
		}
		.page-header,
		.page-header-space {
			height: 250px;
		}
		.page-footer,
		.page-footer-space {
			height: 100px;
		}
		.page-footer {
			position: fixed;
			bottom: 0;
			width: 100%;
		}
		.page-header {
			position: fixed;
			top: 0;
			width: 100%;
		}
		.page {
			page-break-after: always;
		}
		/* @page {
        margin: 5cm;
      } */
		@media print {
			body {
				margin: 0;
			}
			table {
				page-break-inside: auto;
			}
			tr {
				page-break-inside: avoid;
				page-break-after: auto;
			}
			thead {
				display: table-header-group;
			}
			tfoot {
				display: table-footer-group;
			}
		}
	</style>
{% endblock %}

{% block title %}{% endblock %}

{% block body %}
	<table style="padding: 0; margin: 0; width: 100%;">
		<thead>
			<tr>
				<td>
					<h1>{{ app.user.firstname }}
						{{ app.user.lastname }}</h1>
				</td>
			</tr>
		</thead>
		<tbody class="page" style="color: green; font-weight: bold;">
			<tr>
				<td>
					<h2>Contact</h2>
					<ul class="contact">
						<li>{{ app.user.email }}</li>
                        <li>{{ app.user.phonenumber }}</li>
					</ul>
				</td>
			</tr>
			<tr>
				<td>
					<h2>Key Skills</h2>
					<ul class="skills">
						{% if resume.skills is defined and not null %}
							{% for skill in resume.skills %}
								<li>{{ skill.name }}</li>
							{% endfor %}
						{% endif %}
					</ul>
				</td>
			</tr>
			<tr>
				<td>
					<h2>Work Experience</h2>
					<ul class="work experience">
						{% if resume.workExperiences is defined and not null %}
							{% for workExperience in resume.workExperiences %}
								<li>Role: {{ workExperience.role }}</li>
								<li>Company: {{ workExperience.company }}</li>
								<li>Starting Date: {{ workExperience.start }}</li>
								<li>Ending Date: {{ workExperience.end }}</li>
							{% endfor %}
						{% endif %}
					</ul>
				</td>
			</tr>
			<tr>
				<td>
					<h2>Education</h2>
					<ul class="education">
						{% if resume.educations is defined and not null %}
							{% for education in resume.educations %}
								<li>Degree: {{ education.degree }}</li>
								<li>University: {{ education.university }}</li>
								<li>Starting Date: {{ education.start }}</li>
								<li>Ending Date: {{ education.end }}</li>
							{% endfor %}
						{% endif %}
					</ul>
				</td>
			</tr>
		</tbody>
		<tfoot>
			<tr>
				<td></td>
			</tr>
		</tfoot>
	</table>

	<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.min.js" integrity="sha384-nsg8ua9HAw1y0W1btsyWgBklPnCUAFLuTMS2G72MMONqmOymq585AcH49TLBQObG" crossorigin="anonymous"></script>
{% endblock %}
